# AI Services Configuration
NODE_ENV=production

# Local AI Services
LOCAL_STT_URL=http://ai-stt:8001
LOCAL_LLM_URL=http://ai-llm:8003
PREFER_LOCAL_AI=false

# Cloud AI Services
CLOUD_STT_URL=http://ai-cloud-stt:8002
CLOUD_LLM_URL=http://ai-cloud-llm:8004

# Service Timeouts (milliseconds)
STT_TIMEOUT=600000
LLM_TIMEOUT=180000

# File Upload Configuration
UPLOAD_DIR=/app/uploads/audio
MAX_AUDIO_SIZE_MB=1000
MAX_ANALYSIS_WORDS=100000
MAX_CHUNK_SIZE=8000

# AI Provider API Keys (set these in your deployment)
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_API_KEY=${GOOGLE_API_KEY}
AZURE_SPEECH_KEY=${AZURE_SPEECH_KEY}
AZURE_SPEECH_REGION=${AZURE_SPEECH_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}

# Budget Management
DAILY_AI_BUDGET=500.00
MONTHLY_AI_BUDGET=10000.00
COST_ALERT_THRESHOLD=0.9

# Model Configuration
DEFAULT_STT_MODEL=whisper-large-v3
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
FALLBACK_LLM_MODEL=claude-3-sonnet-20240229

# Prompt Templates
PROMPT_TEMPLATES_PATH=/app/ai-services/llm-processing/prompt-templates.json

# Performance and Caching
ENABLE_CACHING=true
CACHE_TTL=7200
MAX_CONCURRENT_JOBS=20

# Logging and Monitoring
LOG_LEVEL=warn
ENABLE_ANALYTICS=true
METRICS_COLLECTION=true

# Security
API_RATE_LIMIT=1000
CORS_ORIGINS=${FRONTEND_URLS}

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=500

# Database
DATABASE_URL=${DATABASE_URL}

# Redis
REDIS_URL=${REDIS_URL}

# Health Check Intervals
HEALTH_CHECK_INTERVAL=30000
SERVICE_RETRY_ATTEMPTS=5
SERVICE_RETRY_DELAY=3000
